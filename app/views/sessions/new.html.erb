<div class="container">
  <h3>Log In</h3>
  <div class="col-lg-8">
    <% form_for :user do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.text_field :email, required: true, autofocus: true, type: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>
    </div>
  <div class="form-actions">
    <%= f.submit, "Log in", class:"btn btn-default" %>
  </div>
  <% end %>
  </div>
</div>
