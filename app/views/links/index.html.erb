<p id="notice"><%= notice %></p>

<h1>My Links</h1>

<table>
  <thead>
    <tr>
      <th>Original URL</th>
      <th>Shortened URL</th>
      <th>Visits</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.original %></td>
        <td><%= link_to link.shortened_url, link.slug, target: "_blank" %></td>
        <td><%= link.visits %></td>
        <td><%= link.active %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
