<div class="container-fluid">
  <h3>My Links</h3>
  <% if @links.any? %>
  <table>
    <thead>
      <tr>
        <th>Original URL</th>
        <th>Shortened URL</th>
        <th>Visits</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.original %></td>
          <td><%= link_to link.shortened_url, link.slug, target: "_blank" %></td>
          <td><%= link.visits %></td>
          <td><%= link.active %></td>
          <td><%= link_to 'Show', user_link_path %></td>
          <td><%= link_to 'Edit', edit_user_link_path %></td>
          <td><%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p> You have not created any shortened links </p>
  <% end %>

  <br>

  <%= link_to 'Shorten a Link', new_link_path %>
</div>
