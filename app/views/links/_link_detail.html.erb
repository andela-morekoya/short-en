<h4>Total visits to link: <%= link.visit_count %></h4>
<table class="table table-hover">
  <thead>
    <tr>
      <td>Username</td>
      <td>IP Address</td>
      <td>Date Visited</td>
    </tr>
  </thead>
  <tbody>
    <% link.visits.each do |visit| %>
      <tr>
        <td><%= visitor_name(visit) %></td>
        <td><%= visit.ip_address %></td>
        <td><%= visit.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
