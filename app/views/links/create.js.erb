$('.url').val('');

new Clipboard('.btn-copy');

$('.result').html('<% if @link.slug %><br><p>Your Shortened Link: ' 
  + '<span id="short_url"><%= link_to @link.shortened_url, @link.shortened_url %>&nbsp;</span>'
  + '<button class="btn btn-default btn-copy" '
  + 'data-clipboard-text="<%= @link.shortened_url %>" '
  + 'data-clipboard-action="copy" data-clipboard-target="#short_url">' 
  + 'Copy Shortened URL</button></p><br><% end %>');


$('#error_explanation').html('<% if @link.errors.any? %><h2>'
  + '<%= pluralize(@link.errors.count, "error") %>'
  + ' stopped this link from being created:</h2>'
  + '<ul><% @link.errors.full_messages.each do |msg| %>'
  + '<li><%= msg %></li><% end %></ul><% end %>');
