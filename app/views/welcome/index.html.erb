<div class="container-fluid">
  <div class="jumbotron text-center">
    <h1>Make Your Links Manageable</h1>
    <p>Simplify them</p>
    <div class="input-group">
      <input type="text" class="form-control" 
             placeholder="Paste your link, shorten it and share">
      <span class="input-group-btn">
        <button class="btn">Shorten</button>
      </span>
    </div>
    <%= form_for(@link, remote: true) do |f| %>
      <% if @link.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@link.errors.count, "error") %> 
            prohibited this link from being saved:
          </h2>
          <ul>
          <% @link.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="result"></div>
      <div class="input-group">
        <%= f.text_field :original, :class => "form-control", 
            :placeholder => "Paste your link, shorten it and share" %>
      </div>
      <div class="input-group-btn">
        <%= f.submit 'Shorten', :class => "btn"%>
      </div>
    <% end %>
    <br>
    <h4>Manage your shortened urls and get the option to use vanity urls</h4>
    <button class="btn">
      <%= link_to "Sign Up", new_user_registration_path %>
    </button>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h3 class="text-center">Recent Links</h3>
      <ul class="numbered-list">
      <% if recent_links %>
        <% @recent_links.each.with_index(1) do |link, index| %>
          <li class="numbered-list__item">
              <span class="numbered-list__counter">
                <%= index %>.&nbsp;
              </span>
              <span class="numbered-list__text">
                <%= link_to link.display_slug, link.slug, target: '_blank' %>
              </span>
          </li>
        <% end %>
      <% end %>
      </ul>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Popular Links</h3>
      <ul class="numbered-list">
      <% if popular_links %>
        <% @popular_links.each do |link| %>
        <li class="numbered-list__item">
          <span class="numbered-list__counter"></span>
          <span class="numbered-list__text">
            <%= link_to link.display_slug, link.slug, target: '_blank' %>
          </span>
        </li>
        <% end %>
      <% end %>
      </ul>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Influential Users</h3>
      <ul class="numbered-list">
        <li class="numbered-list__item">
            <span class="numbered-list__counter"></span>
            <span class="numbered-list__text">Minion ipsum</span>
        </li>
      </ul>
      nah nahnahnahnah nahnahnahnah nananananananananah nahnahnahnah
    </div>
  </div>
</div>




